<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/playing_pod.css" />
    <link href='https://fonts.googleapis.com/css?family=Noto Sans:wght@400;500&display=swap' rel='stylesheet' />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"  />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>Podcast Player</title>
</head>

<body>
    <!-- Navbar -->
    <%-include('header/navbar.ejs', {login: login, money: money})%>

    <!-- End Of Navbar -->

    <div class="back-to-top">
        <span class="back-top"><i class="fa fa-angle-up"></i></span>
    </div>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script>
        AOS.init();
        </script>


        <a href="#" class="to_top">
            <i class="fa fa-chevron-up"></i>
            <script src="/js/to_top.js"> </script>
        </a>
    <div class="music_comment">
        <div class="music">
            <div class="music-thumb">
                <img src="/api/podcast/getimage/<%=id%>" alt="" />
            </div>
            <h3 class="music-name"><%=name%></h3>
            <input type="range" name="range" id="range" class="range" />
            <audio src="/api/podcast/getAudio/<%=id%>" id="song"></audio>
            <div class="timer">
                <div class="remaining">-3:10</div>
                <div class="duration">2:10</div>
            </div>
            <div class="controls">
                <ion-icon name="infinite-outline" class="play-infinite"></ion-icon>
                <ion-icon name="play-back" class="play-back"></ion-icon>
                <div class="play">
                <div class="player-inner">
                    <ion-icon name="play" class="play-icon"></ion-icon>
                </div>
                </div>
                <ion-icon name="play-forward" class="play-forward"></ion-icon>
                <ion-icon name="repeat-outline" class="play-repeat"></ion-icon>
            </div>
        </div>
        <div class="comment">
            <form>
                <div class="form-group">
                  <textarea class="form-control status-box" rows="3" placeholder="Enter your comment here..."></textarea>
                </div>
              </form>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="/js/podcast-player.js"></script>
    <%-include('header/footer.ejs')%>
</body>
</html>
